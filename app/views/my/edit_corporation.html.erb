
<h1>Editing Corporation</h1>

<%= form_for :corporation, url: { action: "update_corporation", id: @corporation.id } do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

  <div class="actions">
    <%= f.submit t( "menu.update" ), 'data-disable-with' => t( "menu.update" ) %>
  </div>
<% end %>

