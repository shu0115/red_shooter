
<h1>New job</h1>

<%= form_for :job, url: { action: "create" } do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit t( "menu.create" ), 'data-disable-with' => t( "menu.create" ) %>
  </div>
<% end %>

<%= link_to t( "menu.list" ), action: "index" %>
